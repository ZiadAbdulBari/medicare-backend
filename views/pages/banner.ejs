<%- include('../layouts/header'); %>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Add Banner</h4>
            <form class="form-sample" method="POST" action="/admin/clienthome/add/banner" enctype='multipart/form-data'>
              <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="banner-img">Banner image</label>
                        <div class="input-group col-sm-9">
                            <input type="file" name="add_banner_img" class="form-control image-upload" id="banner-img">
                            <div class="image-input">
                                <label class="upload-image" for="banner-img">Select a photo</label>
                            </div>
                        </div>
                    </div>
                  </div>
                <div class="col-md-6">
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Content</label>
                    <div class="col-sm-9">
                      <input type="text" name="content" class="form-control" value=" " placeholder="Text Content"/>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <button type="submit" class="btn btn-primary mr-2">Add Core Service</button>
                </div>
              </div>
            </form>
          </div>
        </div>
    </div>
</div>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Core Service List</h4>
          <!-- <p class="card-description">
            Add class <code>.table-striped</code>
          </p> -->
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>
                    Image
                  </th>
                  <th>
                    Content
                  </th>
                  <th>
                    Action
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if(banner.length>0){ %>
                  <% banner.forEach(ban=>{ %>
                  <tr>
                    <td class="py-1">
                      <img src="<%=ban.image%>" alt="image"/>
                    </td>
                    <td>
                      <%= ban.content %>
                    </td>
                    <td>
                      <a href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
                      </a>
                    </td>
                  </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  </div>
</div>
<%- include('../layouts/footer'); %>