<%- include('../layouts/header'); %>
<div class="row">
  <div class="col-12 grid-margin">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Edit Medical Service</h4>
          <form class="form-sample" method="POST" action="/admin/clienthome/medical">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Title</label>
                  <div class="col-sm-9">
                    <input type="text" name="title" class="form-control" value="<%=service[0].title%>" placeholder="Dental"/>
                    <input type="text" name="id" class="form-control" value="<%=service[0]._id%>" placeholder="Dental" hidden/>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Subtitle</label>
                  <div class="col-sm-9">
                    <input type="text" name="subtitle" class="form-control" value="<%=service[0].subtitle%>"  placeholder="Dental Care Service"/>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Description</label>
                  <div class="col-sm-9">
                    <input type="text" name="description" class="form-control" value="<%=service[0].description%>" placeholder="About Dental Care Service"/>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Video Link</label>
                  <div class="col-sm-9">
                    <input type="text" name="video_link" class="form-control" value="<%=service[0].video_link%>" placeholder="Dental Care Service"/>
                  </div>
                </div>
              </div>
              
            </div>
            <div class="row">
              <div class="col-md-12">
                <button type="submit" class="btn btn-primary mr-2">Update Medical Service</button>
              </div>
            </div>
          </form>
        </div>
      </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Core Service List</h4>
          <!-- <p class="card-description">
            Add class <code>.table-striped</code>
          </p> -->
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>
                    Title
                  </th>
                  <th>
                    Subtitle
                  </th>
                  <th>
                    Description
                  </th>
                  <th>
                    Video Link
                  </th>
                </tr>
              </thead>
              <tbody>
                <% if(service.length>0){ %>
                  <% service.forEach(ser=>{ %>
                  <tr>
                    <td>
                      <%= ser.title %>
                    </td>
                    <td>
                      <%= ser.subtitle %>
                    </td>
                    <td style="max-width: 400px;overflow: auto;height: 50;">
                      <%= ser.description %>
                    </td>
                    <td>
                      <%= ser.video_link %>
                    </td>
                  </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
  </div>
</div>
<%- include('../layouts/footer'); %>