<%- include('../layouts/header'); %>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Add Core Service</h4>
            <form class="form-sample" method="POST" action="/admin/clienthome/edit/core-service" enctype='multipart/form-data'>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Service Name</label>
                    <div class="col-sm-9">
                      <input type="text" name="service_name" class="form-control" value="<%=service.service_name%>" placeholder="Dental"/>
                      <input type="text" name="id" class="form-control" value="<%=service._id%>" placeholder="Dental" hidden/>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label" for="service-img">Service image</label>
                    <div class="input-group col-sm-9">
                      <input type="file" name="edit_core_service_img" class="form-control image-upload" id="service-img">
                      <div class="image-input">
                        <label class="upload-image" for="service-img">Select a photo</label>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Title</label>
                    <div class="col-sm-9">
                      <input type="text" name="title" class="form-control" value="<%=service.title%>" placeholder="Dental Care Service"/>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Description</label>
                    <div class="col-sm-9">
                      <input type="text" name="description" class="form-control" value="<%=service.description%>" placeholder="About Dental Care Service"/>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Number of Doctor</label>
                    <div class="col-sm-9">
                      <input type="number" name="number_of_doctor" class="form-control" value="<%=service.number_of_doctor%>" placeholder="Number of Doctor"/>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <button type="submit" class="btn btn-primary mr-2">Edit Core Service</button>
                </div>
              </div>
            </form>
          </div>
        </div>
    </div>
</div>
<%- include('../layouts/footer'); %>