<%- include('../layouts/header'); %>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Add Doctor</h4>
            <form class="form-sample" action="/user/add-doctor/doctor" method="POST">
              <div class="row">
                <div class="col-md-6 cl-sm-12">
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                      <input type="text" name="name" class="form-control" placeholder="Full Name" />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Email</label>
                    <div class="col-sm-9">
                      <input type="email" name="email" class="form-control" placeholder="email@email.com" />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Contact</label>
                    <div class="col-sm-9">
                      <input type="text" name="contact" class="form-control" placeholder="01XXXXXXXXX" />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">NID Number</label>
                    <div class="col-sm-9">
                      <input type="text" name="NID" class="form-control" placeholder="NID" />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Work At</label>
                    <div class="col-sm-9">
                      <input type="text" name="work_at" class="form-control" placeholder="ABC Medical college and Hospital" />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Specialist On</label>
                    <div class="col-sm-9">
                      <input type="text" name="speacialist_on" class="form-control" placeholder="Medicine Specialist" />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Degree</label>
                    <div class="col-sm-9">
                      <input type="text" name="degree" class="form-control" placeholder="MBBS, FCPS, FRCS" />
                    </div>
                  </div>
                </div>
                <div class="col-md-6 col-sm-12">
                  <label class="col-sm-2 col-form-label">Schedule</label>
                  <div class="form-group row">
                    <div class="col-md-12">
                      <div class="row">
                        <div class="col-md-3">
                          <div class="form-check form-check-primary">
                            <label class="form-check-label">
                              <input type="checkbox" class="form-check-input" value="sunday">
                              Sunday
                            <i class="input-helper"></i>
                          </label>
                          </div>
                        </div>
                        <div class="col-md-3">
                          <input type="text" name="sunday_time" class="form-control" placeholder="4:00pm - 9:00pm"/>
                        </div>
                        <div class="col-md-4">
                          <input type="text" name="sunday_hospital" class="form-control" placeholder="Hospital"/>
                        </div>
                        <div class="col-md-2">
                          <input type="number" name="sunday_patient" class="form-control" placeholder="Number"/>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="col-md-12">
                      <div class="row">
                        <div class="col-sm-3">
                          <div class="form-check form-check-primary">
                            <label class="form-check-label">
                              <input type="checkbox" class="form-check-input" value="monday">
                              Monday
                            <i class="input-helper"></i>
                          </label>
                          </div>
                        </div>
